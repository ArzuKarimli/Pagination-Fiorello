@model List<SliderVM>

@{
    ViewData["Title"] = "Index";
}
@section fontawsome{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}
<div class="container mt-5 w-100 ml-5">

    <a class="btn btn-success" asp-area="Admin" asp-controller="Slider" asp-action="Create"><i class="fa-solid fa-circle-plus"></i></a>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="~/img/@item.Image" style="width:160px !important;height:120px !important; border-radius:0 !important;"/></td>
                        <td>
                            <div class="btns">
                                <a class="btn btn-info" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <form class="forms-sample d-inline" method="post" asp-action="Delete" asp-route-id="@item.Id"> <button class="btn btn-danger danger ">Delete</button></form>
                            </div>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>


