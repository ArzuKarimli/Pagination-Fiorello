@model CategoryDetailVM
@{
    ViewData["Title"] = "Detail";
  
}

<div class="container">
    <div class="card">
        <label class="input">
            <h5>Slider Image</h5>
            <input asp-for="Name" class="input__field field"  type="text" disabled/>
           
        </label> 
        <div class="button-group">
          
            <a class="btn btn-success" asp-action="Index">Back</a>
        </div>
                       

        @if(Model.ProductCount != 0)
        {
            <h4>Product count : @Model.ProductCount</h4>
        }
    </div>
</div>

